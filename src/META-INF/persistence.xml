    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/casoDeEstudio"/>
      <property name="javax.persistence.jdbc.user" value="casoDeEstudio"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.jdbc.password" value="casoDeEstudio"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
